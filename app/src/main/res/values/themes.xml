<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SculptLauncher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SculptLauncher.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.SculptLauncher</item>
        <item name="windowSplashScreenBackground">@color/teal_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/launcher</item>
        <item name="windowSplashScreenAnimationDuration">1200</item>
    </style>
</resources>